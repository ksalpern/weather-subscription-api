EMAIL_PASSWORD=             # SMTP password
EMAIL_FROM="Weather API <noreply@weatherapp.com>"

# Application URLs
APP_URL=http://localhost:3000           # Backend URL
FRONTEND_URL=http://localhost:3000      # Frontend URL